{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2016", "dom"],
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"declaration": true,
		"useUnknownInCatchVariables": false,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true,
		"sourceRoot": "../src/node-canvas-text",
		"esModuleInterop": true,
		"outDir": "dist",
		"typeRoots": [
			"node_modules/@types",
			"@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}